bind \"     # windowlist -b
bind L      # login
bind D      # pow_detach
bind B      # pow_break
bind ","    # licence
bind -      # select -
bind ^g     # vbell
bind v      # version
bind r      # wrap
bind ^r     # wrap
bind .
bind ^\
bind \\
bind ^h
bind h
bind H      # log
bind I      # login on
bind O      # login off
bind ^?     # prev
bind ^@     # next
bind ' '    # next

